@Html.BootstrapTree(takeLevel: 3, appendCreatorNode:true, onHoverDropdowns:true).HtmlAttibutes(new { id="menu"})
<script type="text/javascript">
    $(function () {
        $("#menu li.dropdown").hover(function () {
            $(this).addClass("open");
        }, function () {
            $(this).removeClass("open");
        });
    });
</script>
<style>
    #nav ul.dropdown-menu {
        top: 96%;
    }
</style>