@using Cassette.Stylesheets
@using N2.Web
@using N2.Web.UI.WebControls
@using N2Bootstrap.Library
@using N2Bootstrap.Library.Models
@{
    Defaults.Columns columns = Defaults.Columns.TwoColumn;
    if (N2.Context.CurrentPage != null && N2.Context.CurrentPage is ContentPage)
    {
        columns = (N2.Context.CurrentPage as ContentPage).Columns;
    }
    ViewContext.TempData["layout.columns"] = columns;
    Layout = Url.ThemedContent(string.Format("~/Views/Shared/LayoutColumns/_{0}.cshtml", Enum.GetName(typeof(Defaults.Columns), columns)));
}